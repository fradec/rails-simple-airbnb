<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>

    <div class="bg-white">
      <div class="navbar bg-light d-flex justify-content-between mb-4">
        <%= link_to "Simple Airbnb", flats_path, class: 'text-dark btn-lg' %>
        <%= link_to "Add a flat", new_flat_path, class: 'btn btn-outline-primary btn-lg' %>
      </div>

      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
