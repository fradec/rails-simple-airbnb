<h2>All our Flats (<%= @flats.count %>)</h2>

<div class="d-flex justify-content-between align-content-start flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card col-3 mx-2">
      <div>
        <!-- image -->
      </div>

      <div>
        <div>
          <h3><%= flat.name %></h3>
          <p><%= flat.address %></p>
        </div>
        <div class="d-flex">
          <span><i class="fas fa-users"></i> <%= flat.number_of_guests %>&nbsp;</span>
          <span><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></span>
        </div>
      </div>

      <div>
        <%= link_to "More info", flat_path(flat) %>
      </div>
    </div>
  <% end %>
</div>
