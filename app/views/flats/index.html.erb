<h2 class="ml-3">All our Flats (<%= @flats.count %>)</h2>

<div class="d-flex justify-content-between flex-wrap">
  <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="card my-3">
        <div>
          <!-- image -->
        </div>

        <div class="bg-light d-flex justify-content-between flex-column flex-grow-1 p-3">
          <div class="flex-grow-1">
            <h3><%= flat.name %></h3>
            <p><%= flat.address %></p>
          </div>
          <div class="d-flex">
            <span><i class="fas fa-users"></i> <%= flat.number_of_guests %>&nbsp;</span>
            <span><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></span>
          </div>
        </div>

        <div class="p-3">
          <%= link_to "More info", flat_path(flat) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
